    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'rox'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=rox"
                ],
                "filter": {
                    "name": "rox",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'roxc'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=roxi",
                    "--package=rox"
                ],
                "filter": {
                    "name": "roxi",
                    "kind": "bin"
                }
            },
            "env": {
                "RUST_LOG": "rox=trace"
            },
            "args": ["class.lox"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'roxc'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=roxc",
                    "--package=rox"
                ],
                "filter": {
                    "name": "roxc",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit test nested_funcs",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--package=rox"
                ],
                "filter": {
                    "name": "roxc",
                    "kind": "bin"
                }
            },
            "args": ["nested_funcs"],
            "cwd": "${workspaceFolder}"
        }
    ]
}