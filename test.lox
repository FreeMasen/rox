fun reduce(n) {
  while (n > 10) {
    n = n / 10;
  }
  return n;
}

fun isOdd(n) {
  n = reduce(n);
  if (n == 0) return false;
  return isEven(n - 1);
}

fun isEven(n) {
  n = reduce(n);
  if (n == 0) return true;
  return isOdd(n - 1);
}

